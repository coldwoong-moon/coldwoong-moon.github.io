{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{- range .Data.Pages }}
  {{- if and (not .Params.private) (not .Params.draft) }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- if .Lastmod }}
    <lastmod>{{ .Lastmod.UTC.Format "2006-01-02T15:04:05Z" }}</lastmod>
    {{- else if not .Date.IsZero }}
    <lastmod>{{ .Date.UTC.Format "2006-01-02T15:04:05Z" }}</lastmod>
    {{- else }}
    <lastmod>{{ now.UTC.Format "2006-01-02T15:04:05Z" }}</lastmod>
    {{- end }}
    <changefreq>weekly</changefreq>
    {{- if .IsHome }}
    <priority>1.0</priority>
    {{- else if eq .Section "posts" }}
    <priority>0.8</priority>
    {{- else }}
    <priority>0.5</priority>
    {{- end }}
  </url>
  {{- end }}
  {{- end }}
</urlset>